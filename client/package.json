{
  "name": "smartdevice2",
  "version": "0.1.0",
  "description": "SmartDevice React web UI",
  "scripts": {
    "build": "npm run build-css && react-scripts build",
    "build-css": "node-sass src/ -o src/",
    "ci-test": "npm-run-all build-css cover",
    "copy-to-server": "rm -rf ../server/public; cp -r build ../server/public",
    "cover": "CI=true npm test -- --coverage",
    "cover-open": "open coverage/lcov-report/index.html",
    "deploy": "npm-run-all build copy-to-server",
    "flow": "flow",
    "format": "prettier-eslint --write src/**/*.js",
    "lint": "eslint --quiet src --ext .js",
    "mysql": "mysql --host 127.0.0.1 -P 33060 --user root",
    "postinstall": "flow-typed install",
    "Xprepush": "npm run verify",
    "start": "cross-env PORT=4000 npm-run-all -p watch-css start-js",
    "start-js": "react-scripts start",
    "test": "react-scripts test --env=jsdom",
    "test-no-watch": "CI=true react-scripts test --env=jsdom",
    "verify": "npm-run-all lint flow test-no-watch",
    "watch-css": "npm run build-css && node-sass src/ -o src/ --watch"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "dependencies": {
    "cross-env": "^5.1.6",
    "font-awesome": "^4.7.0",
    "lodash": "^4.17.10",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-hash-route": "^1.1.0",
    "react-modal": "^3.4.4",
    "react-redux": "^5.0.7",
    "react-scripts": "1.0.17",
    "react-tabs": "^2.2.2",
    "redux": "^3.7.2",
    "redux-easy": "^2.6.2"
  },
  "devDependencies": {
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-plugin-flowtype": "^2.46.3",
    "eslint-plugin-html": "^3.2.2",
    "eslint-plugin-react": "^7.8.2",
    "flow-bin": "^0.71.0",
    "flow-typed": "^2.4.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "jest-fetch-mock": "^1.5.0",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.12.1",
    "prettier-eslint-cli": "^4.7.1",
    "redux-mock-store": "^1.5.1"
  },
  "resolutions": {
    "hoek": "4.2.1"
  }
}
