{
  "name": "smart-device-server",
  "version": "1.0.0",
  "description": "SmartDevice Express server for REST services",
  "main": "index.js",
  "scripts": {
    "build": "babel -q src -d build",
    "cover": "CI=true npm test -- --coverage",
    "cover-open": "open coverage/lcov-report/index.html",
    "dbi": "mysql --user root -p smartdevice",
    "dbi-pi": "sudo mysql --user root -p smartdevice",
    "dbsetup": "mysql --user root < ../database/ddl.sql",
    "dbsetup-secure": "mysql --user root < ../database/ddl-secure.sql",
    "dbsetup-pi": "sudo mysql < ./ddl.sql",
    "dbstart": "mysql.server start",
    "dbstop": "mysql.server stop",
    "_export": "node build/json-export.js exported.json",
    "export": "npm-run-all build _export",
    "flow": "flow",
    "format": "prettier-eslint --write src/**/*.js",
    "_import": "node build/json-import.js oe-dev-mgmt.json",
    "import": "npm-run-all build _import",
    "lint": "eslint --quiet src --ext .js",
    "postinstall": "flow-typed install",
    "Xprepush": "npm run verify",
    "start":
      "cross-env DYLD_LIBRARY_PATH=$DDS_ROOT/lib node build/index.js",
    "start-secure":
      "cross-env PORT=4001 WS_PORT=1447 DDS_SECURE=true DYLD_LIBRARY_PATH=$DDS_ROOT/lib node build/index.js",
    "start-dev":
      "cross-env FOO=bar DYLD_LIBRARY_PATH=$DDS_ROOT/lib babel-watch --message 'restarting' --ignore node_modules -- src/index.js",
    "test": "jest",
    "verify": "npm-run-all lint flow test-no-watch"
  },
  "jest": {
    "collectCoverageFrom": ["src/**/*.js"],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "express-healthcheck": "^0.1.0",
    "json-dup-key-validator": "^1.0.2",
    "morgan": "^1.9.0",
    "mqtt": "^2.17.0",
    "mysql-easier": "^1.4.1",
    "object-mapper": "^5.0.0",
    "opendds": "0.0.7",
    "ws": "^4.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-watch": "^2.0.7",
    "cross-env": "^5.1.5",
    "eslint": "^4.19.1",
    "eslint-plugin-flowtype": "^2.46.3",
    "eslint-plugin-html": "^4.0.3",
    "eslint-plugin-react": "^7.8.0",
    "flow-bin": "^0.71.0",
    "flow-typed": "^2.4.0",
    "got": "^8.3.1",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "jest-cli": "^22.4.3",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.12.1",
    "prettier-eslint-cli": "^4.7.1"
  },
  "resolutions": {
    "hoek": "4.2.1"
  }
}
